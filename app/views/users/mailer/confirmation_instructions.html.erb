<html>
  <head><meta charset='utf8' /></head>
  <body style="width: 600px; margin: 0 auto;">
    <table width="600">
      <tr>
        <td><%= image_tag "mail/header_email.png" %></td>
      </tr>
      <tr>
        <td>
          <p style="font-family: helvetica, arial; font-size: 14px; color: red">
            <%= t 'mails.confirmation.title', name: @user.name %>
          </p>
        </td>
      </tr>
      <tr>
        <td>
          <p style="font-family: helvetica, arial; font-size: 12px; color: gray">
            <%= t 'mails.confirmation.body'%>
          </p>
        </td>
      </tr>
      <tr>
        <td><%= link_to t('mails.confirmation.link'), user_confirmation_url(:confirmation_token => @resource.confirmation_token) %></td>
      </tr>
      <tr>
        <td>
          <p style="font-family: helvetica, arial; font-size: 12px; color: gray">
            <%= t 'mails.confirmation.footer', name: @user.name %>
          </p>
        </td>
      </tr>
    </table>
  </body>
</html>
