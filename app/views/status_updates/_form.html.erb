<section class="content">
  <div class="content-base">
    <h1 class="mission-title">
      <%= st 'mission.indexed_title', position: mission_enrollment.mission.position, title:mission_enrollment.mission.title %>
    </h1>

    <%= form_for [mission_enrollment.mission, mission_enrollment, status_update], html: { style: 'padding:0' } do |f| %>
      <%= f.error_messages %>

      <%= f.label :status %>
      <%= f.text_area :status %>

      <%= f.hidden_field :mission_enrollment_id %>

      <div class="buttons">
        <%= f.submit button %>
      </div>
    <% end %>
  </div>
</section>
