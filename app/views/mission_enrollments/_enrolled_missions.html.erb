<% if @enrolled_missions.present? %>
  <% @enrolled_missions.each do |enrolled_mission| %>
    <li>
      <h2><%= link_to enrolled_mission.mission.title, mission_enrollment_path(current_user.nickname, enrolled_mission.mission.slug) %></h2>
      <ul class="points-other-mission">
        <% if enrolled_mission.mission.badge.present? %>
          <li><%= image_tag(enrolled_mission.mission.badge.image.small) %></li>
        <% end %>
        <li><h2><%= t("mission.like_count", quantity: 300) %></h2></li>
        <li><%= image_tag("icons/check.jpg") %></li>
      </ul>
    </li>
  <% end %>
<% end %>
